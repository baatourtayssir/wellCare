{% extends 'base.html.twig' %}

{% block title %}Connected Device Details{% endblock %}

{% block body %}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Connected Device Details</h1>
    <p class="mb-4">This page displays the details for a specific connected device record.</p>

    <!-- Details Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Connected Device Information</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ connected_device.id }}</td>
                    </tr>
                    <tr>
                        <th>Device Id</th>
                        <td>{{ connected_device.deviceId }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ connected_device.name }}</td>
                    </tr>
                    <tr>
                        <th>Is On</th>
                        <td>{{ connected_device.isOn ? 'Yes' : 'No' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-start">
        <a href="{{ path('app_connected_device_index') }}" class="btn btn-secondary mr-2">Back to list</a>
        <a href="{{ path('app_connected_device_edit', {'id': connected_device.id}) }}" class="btn btn-warning mr-2">Edit</a>
        {{ include('connected_device/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
    </div>

</div>
<!-- /.container-fluid -->
{% endblock %}
