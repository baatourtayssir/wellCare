{% extends 'base.html.twig' %}

{% block title %}Sensor Data Details{% endblock %}

{% block body %}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Sensor Data Details</h1>
    <p class="mb-4">This page displays the details for a specific sensor data record.</p>

    <!-- Details Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Sensor Data Information</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ sensor_datum.id }}</td>
                    </tr>
                    <tr>
                        <th>Data</th>
                        <td>{{ sensor_datum.data }}</td>
                    </tr>
                    <tr>
                        <th>Captured At</th>
                        <td>{{ sensor_datum.capturedAt ? sensor_datum.capturedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Sensor Id</th>
                        <td>{{ sensor_datum.sensor.sensorId }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-start">
        <a href="{{ path('app_sensor_data_index') }}" class="btn btn-secondary mr-2">Back to list</a>
        <a href="{{ path('app_sensor_data_edit', {'id': sensor_datum.id}) }}" class="btn btn-warning mr-2">Edit</a>
        {{ include('sensor_data/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
    </div>

</div>
<!-- /.container-fluid -->
{% endblock %}
